<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/text_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/time_fast"
        android:paddingTop="90dp"
        android:textColor="@color/black"
        android:textSize="55sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true" >

            <Button
                android:layout_marginVertical="@dimen/dimen_main_sizebuttonverticalmargin"
                android:paddingVertical="@dimen/dimen_main_sizebuttonverticalpadding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green_dark"
                android:onClick="onClickStart"
                android:text="@string/text_button_start" />

            <Button
                android:layout_marginVertical="@dimen/dimen_main_sizebuttonverticalmargin"
                android:paddingVertical="@dimen/dimen_main_sizebuttonverticalpadding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green_dark"
                android:onClick="onClickStop"
                android:text="@string/text_button_stop" />

            <Button
                android:layout_marginTop="@dimen/dimen_main_sizebuttonverticalmargin"
                android:paddingVertical="@dimen/dimen_main_sizebuttonverticalpadding"
                android:layout_marginBottom="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green_dark"
                android:onClick="onClickReset"
                android:text="@string/text_button_reset" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>